{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/engine/build_engine.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/engine/build_engine.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Editor",
            "windows": {
                "command": "${workspaceFolder}/editor/build_editor.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/editor/build_editor.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/editor"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build_all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build_all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
